{
  "private": true,
  "workspaces": [
    "package/*",
    "app/*"
  ],
  "scripts": {
    "dev:lib": "npm --workspace package/better-mui-menu run dev",
    "dev:demo": "npm --workspace app/demo run dev",
    "dev": "npm run dev:lib & npm run dev:demo",
    "lint": "npm --workspace package/better-mui-menu run lint",
    "tsc": "npm --workspace package/better-mui-menu run tsc",
    "audit": "npm audit --audit-level=high --omit=dev",
    "test:lib": "npm --workspace package/better-mui-menu run test:coverage",
    "test": "npm run lint && npm run tsc && npm run test:lib"
  },
  "version": "0.0.2"
}
